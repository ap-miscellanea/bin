#!/usr/bin/env perl
use strict;
use warnings;

use Getopt::Std;
use File::Type ();
use URI ();

getopts( 'sw:', \my %opt );

die "usage: $0 [-s [-w columns]] [file]\n" if @ARGV > 1;
my $width = $opt{'s'} && ( $opt{'w'} || 72 );

my ( $filename ) = @ARGV;

my $data = do { local $/; <> };

my $type = do {
	my $ft = File::Type->new();
	defined $filename ? $ft->checktype_filename( $filename ) : $ft->checktype_contents( $data );
};

my $str = do {
	my $u = URI->new( 'data:' );
	$u->media_type( $type );
	$u->data( $data );
	$u->as_string;
};

$\ = $, = "\n";

print $width
	? map { /\A(.*?,)/gcs, /\G(.{1,$width})/gs } $str
	: $str;
